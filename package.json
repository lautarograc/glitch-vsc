{
  "name": "glitch-vsc",
  "displayName": "Glitchtip VSCode",
  "description": "See GlitchTip errors directly in VS Code",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/lautarograc/glitch-vsc.git"
  },
  "publisher": "lautarograc",
  "contributes": {
    "commands": [
      {
        "command": "glitchtip.refresh",
        "title": "GlitchTip: Refresh Issues"
      },
      {
        "command": "glitchtip.setup",
        "title": "GlitchTip: Link Account"
      }
    ],
    "configuration": {
      "title": "glitch-vsc",
      "properties": {
        "glitchtip.url": {
          "type": "string",
          "default": "https://app.glitchtip.com",
          "description": "Your GlitchTip instance URL."
        },
        "glitchtip.authToken": {
          "type": "string",
          "default": "",
          "description": "Create this in GlitchTip > Profile > Auth Tokens."
        },
        "glitchtip.organizationSlug": {
          "type": "string",
          "default": "",
          "description": "Your Organization Slug."
        },
        "glitchtip.projectSlug": {
          "type": "string",
          "default": "",
          "description": "Your Project Slug."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "node-fetch": "^2.6.1"
  }
}
